
@model LeoAirlines.Models.cityinfo

@{
    ViewBag.Title = "Search";
}
<html>
<head>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/responsiveslides.min.js"></script>
    <a href="~/fonts/glyphicons-halflings-regular.eot"></a>
    <a href="~/fonts/glyphicons-halflings-regular.ttf"></a>
    <a href="~/fonts/glyphicons-halflings-regular.woff"></a>
    <a href="~/fonts/glyphicons-halflings-regular.woff2"></a>


<style>
    body {
        background-image: url('../../images/front photo.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>
</head>
    <body>
<center>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()


        <div class="form-" style="margin-left:50% ">

            <h4 style="color:#1181d4; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:50px"><b>GO! FLY! EXPLORE!</b></h4>

            <br />


            @Html.ValidationSummary(false, "", new { @class = "text-danger" })


            <div class="form-group">
                <h3 style="color:darkblue; font-size:30px; font-family:Cambria"><b>Source</b></h3>
                @*@Html.LabelFor(model => model.CITY, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <div class="col-md-10">

                    @Html.DropDownList("CityList1", ViewBag.CityList1 as SelectList, "Enter Source City", new { @class = "form-control", @required = "true", @placeholder = "Enter Source Location" })
                    @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })



                </div>

            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.CITY, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <h3 style="color: darkblue; font-size: 30px; font-family: Cambria "><b>Destination</b></h3>
                <div class="col-md-10" position="right">

                    @Html.DropDownList("CityList2", ViewBag.CityList2 as SelectList, "Enter Destination City", new { @class = "form-control", @required = "true", @placeholder = "Enter Destination Location" })
                    @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-primary " style="padding: 7px 15px; font-size:15px" />
                </div>
            </div>
        </div>
        @*<div><img src="~/images/a2.png" width="150" height="150" /></div>*@
    }
</center>

</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">$(function () {
        $("City").Choosen();
    });</script>

}

